import("../mesa.gni")

config("include_config") {
  include_dirs = [ "." ]
}

config("vulkan_public_config") {
  if (is_fuchsia) {
    defines = [ "VK_USE_PLATFORM_FUCHSIA=1" ]
  }
  if (is_linux) {
    defines = [ "VK_USE_PLATFORM_WAYLAND_KHR=1" ]
  }
}

mesa_source_set("vulkan") {
  public_configs = [
    ":include_config",
    ":vulkan_public_config",
  ]
  sources = [
    "vulkan/vk_platform.h",
    "vulkan/vulkan.h",
    "vulkan/vulkan_intel.h",
  ]
  if (is_linux) {
    public_deps = [ "//third_party/wayland:client_headers" ]
  }
}

config("c_compat_public_config") {
  defines = [
    "_DEFAULT_SOURCE",
    "HAVE_PTHREAD=1",
  ]
}

mesa_source_set("c_compat") {
  public_configs = [
    ":include_config",
    ":c_compat_public_config",
  ]

  sources = [
    "c11/threads.h",
    "c11/threads_posix.h",
    "c99_alloca.h",
    "c99_compat.h",
    "c99_math.h",
    "no_extern_c.h",
  ]
}

config("drm_config") {
  include_dirs = [ "drm-uapi" ]
}

mesa_source_set("drm-uapi") {
  public_configs = [
    ":drm_config",
  ]
}
